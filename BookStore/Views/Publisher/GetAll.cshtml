@model IEnumerable<BookStore.Models.Domain.Publisher>
@{
    ViewData["Title"] = "Get All";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Publisher/Add">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>All Publishers</h3>
            <table class="table table-stripped table-bordered table-dark">
                <thead class="thead-dark">
                    <tr>
                     <th>Name</th>
                     <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        <th >@item.PublisherName</th>
                            <td>
                                <a class="btn btn-success" href="/Publisher/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Publisher/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                    </tr>
                    }
                   
                   
            </table>

        </div>
    </div>
</div>

